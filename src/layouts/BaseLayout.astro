---
//  styles
import "../styles/reset.css";
import "nes.css/css/nes.min.css";
import '@fontsource/press-start-2p';

//  components
import Navigation from "@components/Navigation/Navigation.astro";
import Footer from "@components/Footer/Footer.astro";
import BtnScrollTop from "@sharedComponents/BtnScrollTop.astro";

//  utilities
import { ViewTransitions } from "astro:transitions";
const { pageTitle } = Astro.props;
---

<html lang="es" transition:animate={"slide"}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Revive la nostalgia en nuestro blog retro: moda vintage, tecnología clásica y la magia de épocas pasadas. Explora con nosotros el encanto del pasado.">
    <link rel="preconnect" href="https://www.dropbox.com">
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  
  <body style={{position: 'relative'}}>
    <Navigation />

    <main class="main-container">
      <slot />
    </main>

    <BtnScrollTop/>

    <Footer/>
    
  </body>
</html>

<style is:global>
  :root {
    --clrVarLight: #fee4fd;
    --clrVar: #e829dbbc;
    --clrVarDark: #c26fba;
    --clrVarLight2: #dedff9;
    --clrVar2: #292fe8bc;
    --clrVarDark2: #6f72c2;
  }
  body {
    font-family: 'Press Start 2P', sans-serif;
    position: relative;
    padding: 1rem;
    display: grid;
    grid:
      "header" auto
      "main" 1fr 
      "footer" auto;
    gap: 1rem;
    background-color: #100f22;
    color: white;
    max-width: 87.5rem;
    margin-inline: auto;
  }

  header {
    grid-area:  "header";
  }

  main {
    grid-area:  "main";
    min-height: 100dvh;
    display: flex;
    flex-flow: wrap column;
    gap: 2rem;
  }

  footer {
    grid-area:  "footer";
  }

  h1 {
    font-weight: 700;
    font-size: clamp(1.2rem, 3vw ,2.5rem);
  }

  @keyframes flickerText {
  0%,
  50%,
  to {
    text-shadow:
      0.5px 1px 8px var(--clrVarDark),
      -0.5px 1px 8px var(--clrVar),
      0.5px -1px 8px var(--clrVarDark),
      -0.5px -1px 8px var(--clrVarDark);
  }

  10%,
  30%,
  80% {
    text-shadow:
      0.5px 1px 8px var(--clrVarDark),
      0px 0px 8px var(--clrVar),
      0px 0px 8px var(--clrVarDark),
      0px 0px 8px var(--clrVarDark);
  }

  20%,
  45%,
  90% {
    text-shadow:
      0.5px 1px 8px var(--clrVarDark),
      -0.5px 1px 8px var(--clrVar),
      0.5px -1px 8px var(--clrVarDark),
      -0.5px -1px 8px var(--clrVarDark);
  }
}

@keyframes toBlink {
  0% {
    opacity: 1;
  }
  3% {
    opacity: 0.4;
  }
  6% {
    opacity: 1;
  }
  7% {
    opacity: 0.4;
  }
  8% {
    opacity: 1;
  }
  9% {
    opacity: 0.4;
  }
  10% {
    opacity: 1;
  }
  100% {
    opacity: 1;
  }
}
</style>
