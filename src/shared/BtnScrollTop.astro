  type="button" 
  class="nes-btn is-error scroll-btn"
>
  <span style={{transform: 'rotate(90deg)', display: 'block'}}>
    &lt; 
  </span>
</button>

<style>
  .nes-btn {
    position: fixed;
    width: 3rem;
    height: 3rem;
    display: grid;
    place-content: center;
    bottom: 5%;
    right: 5%;
    transform: translateX(0);
    animation: appear linear both;
    animation-timeline:  scroll();
    animation-range: 1rem ;
    opacity: 1;
  }
  
  @keyframes appear {
    from {
      transform: translateX(8rem);
      opacity: 0;
    }
  }
</style>

<script >
  import { scrollTopWindow } from '@scripts/scrollTopWindow' 

  document.addEventListener('astro:page-load', scrollTopWindow);
</script>
