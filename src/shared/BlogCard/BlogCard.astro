---
import './BlogCard.css'
import { Image } from 'astro:assets'
import IconsBar from '../IconsBar/IconBar.astro'

interface Props {
  image: string,
  title: string,
  description: string
  url: string
  color: string
}

const { description, image, title, url, color } = Astro.props;
---

<a 
  class="nes-container is-dark card"
  style={{textDecoration: 'none'}}
  href={ url } 
  rel="noopener noreferrer"
>

<div class="card-wrapper">
  <Image
    class="card-img"
    src={image} 
    width='150' 
    height='150' 
    alt="portada de blog"
  />
</div>

<div class="card-content">
  <h2 class="card-title">
    { title }
  </h2>

  <p class="card-description">
    { description }
  </p>

  <IconsBar />
</div>

</a>
