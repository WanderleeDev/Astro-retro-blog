---
import { Image } from "astro:assets";
import { listGifts } from "@data/gifs";
import "./CategoryCard.css";

interface Props {
  title:string;
}

const { title } = Astro.props;

const categoryGif = (category: string) => {
  const i = listGifts.findIndex(
    gif => gif.name.toLocaleLowerCase() === category.toLocaleLowerCase()
  );
  return listGifts[i].gif
}
---
  <figure class="categoryCard  nes-container is-dark with-title">
    <figcaption class="categoryCard-title title">{title}</figcaption>
    <div class="categoryCard-subWrapper">
      <div class="categoryCard-img">
        <Image
          class='img' 
          src={categoryGif(title)} 
          alt="asa" 
          width="100" 
          height="100"
        />
      </div>
      <div class="categoryCard-icons">
        <i class="nes-icon is-mediun heart"></i>
        <i class="nes-icon trophy is-mediun"></i>
        <i class="nes-icon coin is-mediun"></i>
        <i class="nes-icon is-mediun star"></i>
      </div>
    </div>
  </figure>
